#!/usr/bin/env python

import rospy
import tf
from mavros_msgs.msg import AttitudeTarget
from std_msgs.msg import Float64	

class ATToRPY():
	def __init__(self):
		rospy.init_node('at_to_rpy', anonymous=True)
		
		self.pub_roll = rospy.Publisher('/at_to_rpy/roll', Float64, queue_size=10)
		self.pub_pitch = rospy.Publisher('/at_to_rpy/pitch', Float64, queue_size=10)
		self.pub_yaw = rospy.Publisher('/at_to_rpy/yaw', Float64, queue_size=10)
		self.sub_at = rospy.Subscriber("/mavros/setpoint_raw/attitude", AttitudeTarget, self.callback)
	
		rospy.loginfo("Starting AttitudeTarget to RPY spinner")
	
		rospy.spin()
		
	def callback(self, data):
		q = data.orientation
		(r, p, y) = tf.transformations.euler_from_quaternion([q.x, q.y, q.z, q.w])
		
		self.pub_roll.publish(r)
		self.pub_pitch.publish(p)
		self.pub_yaw.publish(y)

if __name__ == '__main__':
	try:
		spinner = ATToRPY()
	except rospy.ROSInterruptException:
		pass